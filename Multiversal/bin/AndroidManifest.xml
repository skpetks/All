<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.multiversal"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="12" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.NoTitleBar.WithColoredSpinners" >
        <activity
            android:name=".Menuscreen"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddDevice"
            android:label="@string/title_activity_add_device"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name=".Scheduling"
            android:label="@string/title_activity_scheduling"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.multiversal.PrintDemo"
            android:label="@string/title_activity_simulation" >
        </activity>
        <activity
            android:name="com.multiversal.DeviceListActivity"
            android:label="@string/select_device"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name=".Simulation"
            android:label="@string/title_activity_simulation"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name=".CumulativeSimulation"
            android:label="@string/title_activity_simulation"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        
        <activity android:name=".FileUpload"></activity>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>